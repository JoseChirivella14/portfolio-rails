<div class="resume-container">
  <div class="title">
    <h3 class="border-primary">RESUME</h3>
  </div>
  <div class="education">
    <% @education.order('date desc').each do |education| %>
      <p><%= education.date.strftime('%m/%d/%Y') %></p>
      <p><%= education.title %></p>
      <p><%= education.description %></p>
      <br>
    <% end %>
  </div>
  <div class="experience">
    <% @experience.order('date desc').each do |experience| %>
      <p><%= experience.date.strftime('%m/%d/%Y') %></p>
      <p><%= experience.company %></p>
      <p><%= experience.title %></p>
      <p><%= experience.description %></p>
      <br>
    <% end %>
  </div>
</div>
<div class="portfolio-container">
  <div class="title">
    <h3 class="border-primary">PORTFOLIO</h3>
  </div>
  <div class="portfolio">
    <% @project.each do |project| %>
      <p>
        <%= project.title %>
        <%= image_tag(project.background_image_url) %>
      </p>
    <% end %>
  </div>
</div>