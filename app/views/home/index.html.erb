<section id="resume-container">
  <div class="row">
    <div class="small-12 columns">
      <div class="title">
        <h3 class="border-primary primary-title text-center">RESUME</h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 medium-6 columns">
      <div class="education">
        <h4>Education<i class="fa fa-graduation-cap"></i></h4>
        <% @education.order('date desc').each do |education| %>
          <p><i><%= education.date.strftime('%B/%Y') %></i></p>
          <p class="box-blue"><%= education.title %></p>
          <p><%= education.description %></p>
          <br>
        <% end %>
      </div>
    </div>
    <div class="small-12 medium-6 columns">
      <div id="experience">
        <h4><i class="fa fa-suitcase"></i>Experience</h4>
        <% @experience.order('from_date desc').each do |experience| %>
          <p><i><%= experience.from_date.strftime('%B/%Y') %> - <%= experience.until.strftime('%B/%Y') %></i></p>
          <p class="box-blue"><%= experience.company %></p>
          <p><%= experience.title %></p>
          <p><%= experience.description %></p>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</section>

